<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cargar Libro</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body class="container mt-5">

  <h2 class="mb-4">Cargar libro en PDF</h2>

  <form id="formLibro" enctype="multipart/form-data">
    <div class="mb-3">
      <input type="file" name="libro" accept="application/pdf" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Subir y procesar</button>
  </form>

  <hr />

  <h4>Resultado</h4>
  <pre id="resultado" style="background: #f5f5f5; padding: 1rem; border: 1px solid #ccc;"></pre>

  <script>
    document.getElementById('formLibro').addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(this);

      const res = await fetch('/cargar-libro', {
        method: 'POST',
        body: formData
      });

      const data = await res.json();
      document.getElementById('resultado').textContent = JSON.stringify(data, null, 2);
    });
  </script>
</body>
</html>
