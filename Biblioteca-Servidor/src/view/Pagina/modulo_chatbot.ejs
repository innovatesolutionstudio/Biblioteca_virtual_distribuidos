<script>
  const slides = document.querySelectorAll('.chatbot-historia-slide');
  let currentIndex = 0;

  function mostrarSiguienteSlide() {
    const actual = slides[currentIndex];
    actual.classList.remove('activo');
    actual.classList.add('salida');

    currentIndex = (currentIndex + 1) % slides.length;

    const siguiente = slides[currentIndex];
    siguiente.classList.remove('salida');
    siguiente.classList.add('activo');

    // Reset estado del slide anterior
    setTimeout(() => actual.classList.remove('salida'), 600);
  }

  setInterval(mostrarSiguienteSlide, 5000);
</script>